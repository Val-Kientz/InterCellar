<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="p54.intercellar" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".screen.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.BottleActivity"
            android:label="@string/title_activity_bottle" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="p54.intercellar.screen.MainActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.CellarActivity"
            android:label="@string/title_activity_cellar" >
        </activity>
        <activity
            android:name=".screen.BottleDetailsActivity"
            android:label="@string/title_activity_bottle_details" >
        </activity>
        <activity
            android:name=".screen.BottleFormActivity"
            android:label="@string/title_activity_add_bottle">
        </activity>
        <activity
            android:name=".screen.AddChateauActivity"
            android:label="@string/title_activity_add_chateau">
        </activity>

        <uses-permission android:name="android.permission.CAMERA" />

        <uses-feature android:name="android.hardware.camera" />
        <uses-feature android:name="android.hardware.camera.autofocus" />

        <activity
            android:name=".screen.AddRatingActivity"
            android:label="@string/title_activity_add_rating"
            android:parentActivityName=".screen.BottleDetailsActivity" >
        </activity>
        <activity
            android:name=".screen.ShelfActivity"
            android:label="@string/title_activity_shelf" >
        </activity>
    </application>

</manifest>
