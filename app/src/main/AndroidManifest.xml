<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="p54.intercellar" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".screen.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screen.BottleActivity"
            android:label="@string/title_activity_bottle" >
        </activity>
        <activity
            android:name=".screen.CellarActivity"
            android:label="@string/title_activity_cellar" >
        </activity>
        <activity
            android:name=".screen.BottleDetailsActivity"
            android:label="@string/title_activity_bottle_details" >
        </activity>
        <activity
            android:name=".screen.AddBottleActivity"
            android:label="@string/title_activity_add_bottle"
            android:parentActivityName=".screen.BottleActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="p54.intercellar.screen.BottleActivity" />
        </activity>
        <activity
            android:name=".screen.AddChateauActivity"
            android:label="@string/title_activity_add_chateau"
            android:parentActivityName=".screen.AddBottleActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="p54.intercellar.screen.AddBottleActivity" />
        </activity>
    </application>

</manifest>
